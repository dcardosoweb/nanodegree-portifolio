<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.neohome.meuportifolio.MainActivity"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp">

    <TextView
        android:text="Meus aplicativos Nanodegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvw_titulo"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Filmes populares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_filmes"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openFilmes"/>

    <Button
        android:text="Stock Hawk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_stock_hawk"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openStockHawk" />

    <Button
        android:text="Faça-o maior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_faca_maior"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openFacaMaior" />

    <Button
        android:text="Faça seu aplicativo com Material"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_faca_material"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openFacaMaterial" />

    <Button
        android:text="Seja onipresente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_onipresente"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openSejaOnipresente" />

    <Button
        android:text="Capstone "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btn_capstone"
        android:backgroundTint="#F08C35"
        android:textStyle="bold"
        android:textColor="@android:color/background_dark"
        android:onClick="openCapstone" />
</LinearLayout>